{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "BufferInput": {
      "type": "object",
      "properties": {
        "data": {
          "type": "string",
          "format": "byte",
          "maxLength": 10485760
        }
      },
      "required": ["data"]
    },
    "UTF8Input": {
      "type": "object",
      "properties": {
        "data": {
          "type": "string",
          "format": "byte"
        }
      },
      "required": ["data"]
    },
    "U8RangeInput": {
      "type": "object",
      "properties": {
        "value": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        }
      },
      "required": ["value"]
    }
  }
}