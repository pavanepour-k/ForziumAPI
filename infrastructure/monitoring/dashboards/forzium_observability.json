{
  "dashboard": {
    "title": "Forzium Service Observability",
    "uid": "forzium-obsv-001",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "tags": [
      "forzium",
      "production",
      "observability"
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-primary"
          },
          "refresh": 1,
          "definition": "label_values(forzium_http_requests_total, instance)",
          "multi": false,
          "includeAll": false
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "timeseries",
        "title": "HTTP Throughput (req/s)",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-primary"
        },
        "targets": [
          {
            "expr": "sum(rate(forzium_http_requests_total{instance=\"$instance\"}[5m]))",
            "legendFormat": "Total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green" },
                { "color": "orange", "value": 2000 },
                { "color": "red", "value": 1500 }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Latency p95 (ms)",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-primary"
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(forzium_http_request_latency_bucket{instance=\"$instance\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green" },
                { "color": "orange", "value": 40 },
                { "color": "red", "value": 80 }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Error Rate",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-primary"
        },
        "targets": [
          {
            "expr": "sum(rate(forzium_http_requests_total{status=\"5xx\",instance=\"$instance\"}[5m])) / sum(rate(forzium_http_requests_total{instance=\"$instance\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green" },
                { "color": "orange", "value": 0.02 },
                { "color": "red", "value": 0.05 }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 4,
        "type": "table",
        "title": "Background Task Lag",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-primary"
        },
        "targets": [
          {
            "expr": "max_over_time(forzium_background_task_lag_seconds{instance=\"$instance\"}[5m])",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "indexByName": {
                "Value": 1
              },
              "renameByName": {
                "Value": "lag_seconds"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Rayon Worker Utilization",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-primary"
        },
        "targets": [
          {
            "expr": "avg(rate(forzium_rayon_busy_threads{instance=\"$instance\"}[5m]) / forzium_rayon_total_threads{instance=\"$instance\"})",
            "legendFormat": "utilization",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          },
          "overrides": []
        }
      }
    ]
  },
  "meta": {
    "forzium_release": "0.1.4",
    "authors": ["observability@forzium.dev"],
    "retention_guidance_days": 30,
    "description": "Curated Grafana dashboard tracking throughput, latency, error rate, background tasks, and Rayon utilization for the Forzium service tier.",
    "generated": "2025-01-11T00:00:00Z"
  }
}